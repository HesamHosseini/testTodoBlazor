@inject stateService.TodosManager Todos;
<div>Todos Genrated : @Todos.getValue().Count </div>
<div class="w-100 d-grid justify-content-around gap-2 " style="grid-template-columns: 30% 30% 30%; ">




 



    @foreach (var todo in Todos.getValue())
    {
        <TodoCard title=@todo.GetTitle() discription=@todo.GetDiscription()
              todoId=@todo.GetId() bgColor=@todo.GetBgColor() ></TodoCard>
    }

</div>


@code {



    protected override void OnInitialized()
    {
        Todos.OnStateChange += StateHasChanged;

    }


}